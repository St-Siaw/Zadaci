@page "/MinMax"

<PageTitle>Arrays</PageTitle>

<table>
    <tr>
        <td>Enter n:</td>
        <td><input style="text-align:right" @bind="n" /></td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button @onclick="Result">Determine Expression</button> &nbsp;
        </td>
    </tr>
    <tr>
        <td>Result:</td>
        <td><input style="text-align:right" @bind="result" /></td>
    </tr>
</table>


@code {
    private int n = 0;
    private long result = 0;


    private void Result()
    {
        long res = 0;
        for(int i = n; i > 1; i--)
        {
            res = res+ (i*(i - 1)) / 2;
        }

        result = res;
    }
}
