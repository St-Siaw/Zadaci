@page "/ArrayIteration"


<PageTitle>Arrays - iteration</PageTitle>
<h1>Arrays - iteration</h1>
<br />
    <button @onclick="Execute">Do It!</button>
<br />
    Output:
<br />
<div style="border:solid; border-color:black">
    <pre>@message</pre>
</div>


@code {

    private string message;

    private int[] array = { 1,23,33,44,2,13,24,54,55,100,2323,123};

    private void Execute()
    {
        BubbleSort(array);

        message = "Sorted: " + ArrayToString(array);

    }

    void BubbleSort(int[] arr)
    {
        int temp;
        for (int i = 0; i < arr.Length - 1; i++)
        {
            for (int j = 0; j < arr.Length - i - 1; j++)
            {
                if (arr[j] < arr[j + 1])
                {
                    temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
    }

    private string ArrayToString(int[] array)
    {
        string result = String.Empty;
        foreach(int x in array)
        {
            result += " " + x.ToString();
        }
        return result;
    }

}
